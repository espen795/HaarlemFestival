                    }
                </p>
                <p>
                    @Html.ActionLink("More information about Friday", "DayOverview", "Jazz", new { id = "2" }, new { @class = "btn btn-black" })
                </p>
            </div>

            <!-- Artiest Zaterdag -->
            <div class="col-md-3 keuze_blok">
                <img src="/images/Jazz/zaterdag_artiest.png" />
                <h2>@Model[12].Day.Naam</h2>
                <p>
                    <b>Date:</b>  @Model[12].Day.Naam - @Model[12].Day.Date.ToShortDateString()<br />
                    <b>Location:</b>  @Model[12].ConcertLocation<br />
                    <b>Performing:</b>
                    @foreach (Jazz j in Model)
                    {
