@{
    ViewBag.Title = "Talking Haarlem";
}
<section class="event-banner talking"></section>

<main class="event container talking">
    <section class="row">
        <!-- Section 1 -->
        <section class="event-section-1">
            <section class="col-md-6">
                <h1 class="title">Talking Haarlem</h1>
                <p class="content">
                    Do you want to learn even more about Haarlem?
                    Talking Haarlem will present to you six Dutch people
                    who talk about their experience in Haarlem
                    and how that influenced their carreer and life.
                </p>
            </section>

            <section class="col-md-6">
                <section class="sfeer-image">
                    <img class="sfeer-image-resize" src="/images/Talking/Giel_Beelen_Squared.jpg" />
                </section>
                <section class="sfeer-image">
                    <img class="sfeer-image-resize" src="/images/Talking/Femke_Halsema_Squared.jpg" />
                </section>
                <section class="sfeer-image">
                    <img class="sfeer-image-resize" src="/images/Talking/Paul_Witteman_Squared.jpg" />
                </section>
            </section>
        </section>

        <!-- Section 2 -->
        <section class="event-section-2">
            <hr class="title-hr title-line-left">
            <section class="event-header talking-haarlem">
                <section class="overlay">
                    <span class="header_tekst">Talks & Information</span>
                </section>
            </section>
            <hr class="title-hr title-line-right">
        </section>

        <!-- Section 3 -->
        <section class="talking-info">
            <h3>General information</h3>
            <p class="talking-place-time">
                Place & Time
                Toneelschuur & Filmschuur
                Lange Begijnestraat 9
                2011 HH Haarlem
                20:00 - 22:00
            </p>
            <p class="talking-important-info">
                These interviews will be held in the Dutch language.
                Reservation is mandatory.
                Price: Free
            </p>
        </section>

        <!-- Section 4 -->
        <section class="talks">
            <article class="talk">
                <p class="talk-image-header">Giel Beelen</p>
                <section>
                    <img class="talk-image" src="/images/Talking/Giel_Beelen2.jpg" />
                </section>
                <h3 class="talk-header">Giel Beelen meets Rob Trip</h3>
                <p>
                    Famous DJ Giel meets TV host Rob.
                </p>
                <section>
                    <p class="btn btn-black"><a href="#">More info</a></p>
                    <p class="btn btn-black"><a href="#">Order Ticket</a></p>
                </section>
            </article>
            <article class="talk">
                <p class="talk-image-header">Femke Halsema</p>
                <section>
                    <img class="talk-image" src="/images/Talking/Femke_Halsema2.jpg" />
                </section>
                <h3 class="talk-header">Femke Halsema meets Job Cohen</h3>
                <p>
                    Two ex-politics question each other about their career and experiences in Haarlem.
                </p>
                <section>
                    <p class="btn btn-black"><a href="#">More info</a></p>
                    <p class="btn btn-black"><a href="#">Order Ticket</a></p>
                </section>
            </article>
            <article class="talk">
                <p class="talk-image-header">Paul Witteman</p>
                <section>
                    <img class="talk-image" src="/images/Talking/Giel_Beelen2.jpg" />
                </section>
                <h3 class="talk-header">Paul Witteman meets Brigitte Kaandorp</h3>
                <p>
                    TV host Paul meets journalist Brigitte.
                </p>
                <section>
                    <p class="btn btn-black"><a href="#">More info</a></p>
                    <p class="btn btn-black"><a href="#">Order Ticket</a></p>
                </section>
            </article>
        </section>
    </section>
</main>
