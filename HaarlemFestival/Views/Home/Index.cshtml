@{
    ViewBag.Title = "Home Page";
}

<div id="header-image"></div>
<div id="carousel-home" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="banner banner1"></div>
        </div>
        <div class="item">
            <div class="banner banner2"></div>
        </div>
    </div>

    <a class="left carousel-control" href="#carousel-home" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-home" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div id="logo"></div>


<div class="home container">
    <div class="row">
        <div class="section_home_1">

                <!-- Jazz F Block -->
                <div class="feature-block col-md-3">
                    <div class="feature-block-image">
                        <a href="@Url.Action("Index", "Jazz")"><img src="/images/Home/ft_jazz.png" /></a>
                    </div>
                    <div class="feature-block-content">
                        <p class="title">Jazz@Patronaat</p>
                        <p class="content">Over 18 band are performing at Jazz@Patronaat. The first 3 days are in the Patronaat spread over 2 halls, on Sunday this event will take place at the Grote Markt in the centre of Haarlem.</p>
                        <input type="button" class="button" value="More info" onclick="location.href='@Url.Action("Index", "Jazz")'" />
                    </div>
                </div>

                <!-- Dinner F Block -->
                <div class="feature-block col-md-3">
                    <div class="feature-block-image">
                        <a href="@Url.Action("Index", "Dinner")"><img src="/images/Home/ft_dinner.png" /></a>
                    </div>
                    <div class="feature-block-content">
                        <p class="title">Dinner in Haarlem</p>
                        <p class="content">If you like food then Dinner in Haarlem will be something you like. With special menus in eight different restaurants, all located in the city center.<br /><br /></p>
                        <input type="button" class="button" value="More info" onclick="location.href='@Url.Action("Index", "Dinner")'" />
                    </div>
                </div>

                <!-- Talking F Block -->
                <div class="feature-block col-md-3">
                    <div class="feature-block-image">
                        <a href="@Url.Action("Index", "Talking")"><img src="/images/Home/ft_talking.png" /></a>
                    </div>
                    <div class="feature-block-content">
                        <p class="title">Talking Haarlem</p>
                        <p class="content">Haarlem of course, has and had some famous citizens. In a three night special three famous ex-citizens will talk in Dutch about their experience in Haarlem and the impact it had/has on their careers.</p>
                        <input type="button" class="button" value="More info" onclick="location.href='@Url.Action("Index", "Talking")'" />
                    </div>
                </div>

                <!-- Historic F Block -->
                <div class="feature-block col-md-3">
                    <div class="feature-block-image">
                        <a href="@Url.Action("Index", "Historic")"><img src="/images/Home/ft_historic.png" /></a>
                    </div>
                    <div class="feature-block-content">
                        <p class="title">Historic Haarlem</p>
                        <p class="content">If you are interested in history then the historic tour is something for you! In this tour you will walk through the ages and visit the most interesting and beautiful locations in Haarlem.</p>
                        <input type="button" class="button" value="More info" onclick="location.href='@Url.Action("Index", "Historic")'" />
                    </div>
               
            </div>


        </div>

        <div class="section_home_2">
            <div class="col-md-9">
                <h1>Welcome to the website of the Haarlem Festival!</h1>
                <p>
                    The Haarlem Festival offers multiple different events to a broad public, there is something to do for everyone.<br />
                    The festival takes place between 27 July and 29 July (2018), and will be held every year.
                </p>
                <p>
                    See the event pages for more information about what you can expect on the festival.<br /><br />

                    We hope to see you soon!
                </p>
            </div>
            <div class="col-md-3">
                    <img src="/images/Home/maincontentimg.png" class="maincontent_img" />
            </div>
        </div>

        </div> <!-- /row -->
</div><!-- /container -->
