@using HaarlemFestival.Models;
@using System.Collections.Generic;
@using System.Data.Entity;
@{
    ViewBag.Title = "Agenda";
}

<div class="event-banner"></div>

<div class="event container">
    <div class="row">
        <!-- Section 1 -->
        <div class="event-section-1">
            <div class="col-md-6">
                <h1 class="title">Your personal agenda</h1>
                <p class="content">
                    On this page you can see what activities you have booked.
                </p>
            </div>
            <div class="col-md-6">
                <div class="sfeer-image">
                    <img src="/images/Jazz/sfeer_3.png" />
                </div>
                <div class="sfeer-image">
                    <img src="/images/Dinner/sfeer/sfeer2.png" />
                </div>
                <div class="sfeer-image">
                    <img src="/images/Historic/sfeer/sfeer2.jpg" />
                </div>
            </div>
        </div>

        <div class=" event-section-2">
            <hr class="title-hr title-line-left">
            <div class="event-header contact-header">
                <div class="overlay">
                    <span class="header_tekst">Personal agenda</span>
                </div>
            </div>
            <hr class="title-hr title-line-right">
        </div>

        <div class="event-section-3">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#agenda-thursday">Thursday</a></li>
                <li><a data-toggle="tab" href="#agenda-friday">Friday</a></li>
                <li><a data-toggle="tab" href="#agenda-saturday">Saturday</a></li>
                <li><a data-toggle="tab" href="#agenda-sunday">Sunday</a></li>
            </ul>

            <div class="tab-content">
                <div id="agenda-thursday" class="tab-pane fade in active">
                    <div class="table table-hover table-responsive ticket-table">
                        <table>
                            <tr>
                                <th>Time</th>
                                <th>Activity</th>
                            </tr>
                            @{
                                DateTime StartTime = new DateTime(1997, 4, 7, 10, 0, 0, 0);
                                DateTime EndTime = new DateTime(1997, 4, 7, 22, 0, 0, 0);
                                while (StartTime < EndTime)
                                {
                                    <tr>
                                        <td>@StartTime.TimeOfDay.ToString(@"hh\:mm")</td>
                                        <td></td>
                                    </tr>
                                    StartTime = StartTime.AddMinutes(30);
                                }
                            }
                        </table>
                    </div>
                </div>

            </div>
            <div id="agenda-friday" class="tab-pane fade">
            </div>
            <div id="agenda-saturday" class="tab-pane fade">
            </div>
            <div id="agenda-sunday" class="tab-pane fade">
            </div>
        </div>
    </div>
</div>
</div>

