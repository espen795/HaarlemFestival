@using HaarlemFestival.Models
@model Activity
@{
    if (Model.GetType() == typeof(Jazz))
    {
        Jazz activity = Model as Jazz;

        Html.Editor(activity.artist.ArtistName);
        Html.Editor(activity.artist.ArtistInformation);
        Html.Editor(activity.StartSession.ToString(""));
        Html.Editor(activity.EndSession.ToString(""));
        Html.Editor(activity.ConcertLocation);
        Html.Editor(activity.ConcertHall);
        Html.Editor(activity.TotalTickets.ToString());
        Html.Editor(activity.artist.ArtistImage);
    }
    else if (Model.GetType() == typeof(Dinner))
    {
        Dinner activity = Model as Dinner;
        // W.I.P
    }
    else if (Model.GetType() == typeof(Talking))
    {
        Talking activity = Model as Talking;

        Html.Editor(activity.Talk.Person1);
        Html.Editor(activity.Talk.Person2);
        Html.Editor("Description");
        Html.Editor(activity.StartSession.ToString());
        Html.Editor(activity.EndSession.ToString());
        Html.Editor(activity.Address);
        Html.Editor("Hall");
        Html.Editor(activity.Price.ToString());
        Html.Editor(activity.TotalTickets.ToString());
        Html.Editor(activity.Talk.MaxTickets.ToString());
    }
    else if (Model.GetType() == typeof(Historic))
    {
        Historic activity = Model as Historic;

        Html.Editor(activity.StartSession.ToString(""));
        Html.Editor(activity.Address);
        Html.Editor("Language");
        Html.Editor("Guide");
        Html.Editor(activity.TotalTickets.ToString());
        Html.Editor(activity.Price.ToString());
        Html.Editor(activity.AlternativePrice.ToString());
    }

}
