@using HaarlemFestival.Models

<script type="text/javascript">

    $(document).ready(function () {

        $("#selectEvent").val("Jazz@Patronaat");

        $('.addDataForm').each(function () {
            $(this).hide();
        })

        $("#JazzForm").show();
    });

    function AddEventFilter()
    {
        var event = $("#selectEvent").val();

        $('.addDataForm').each(function () {
            $(this).hide();
        })

        switch (event) {
            case "Jazz@Patronaat":
                $("#JazzForm").show();
                break;

            case "Restaurant":
                $("#RestaurantForm").show();
                break;

            case "DinnerInHaarlem":
                $("#DinnerForm").show();
                break;

            case "TalkingHaarlem":
                $("#TalkingForm").show();
                break;

            case "Guide":
                $("#GuideForm").show();
                break;

            case "HistoricHaarlem":
                $("#HistoricForm").show();
                break;
        }
    }

</script>

@Html.Label("Select an event:")
<select id="selectEvent" name="selectEvent" onchange="AddEventFilter()">
    <option value="Jazz@Patronaat">Jazz@Patronaat</option>
    <option value="Restaurant">Restaurant</option>
    <option value="DinnerInHaarlem">Dinner in Haarlem</option>
    <option value="TalkingHaarlem">Talking Haarlem</option>
    <option value="Guide">Guide</option>
    <option value="HistoricHaarlem">Historic Haarlem</option>
</select>


<div id="JazzForm" class="addDataForm">
@using (Html.BeginForm("AddJazz", "Admin", FormMethod.Post))
{
    Html.RenderAction("_JazzPartial", "Admin");
}
</div>

